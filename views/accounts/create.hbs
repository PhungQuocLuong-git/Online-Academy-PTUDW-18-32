    <link rel="stylesheet" href="/public/stylesheets/validator.css">
     <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
</head>
<body>
    
    <div class="main">

        

        <form action="store" method="POST" class="form" id="form-1">
          <h3 class="heading">ĐĂNG KÝ</h3>
          <p class="desc"></p>
          <div class="spacer"></div>
      
         <div class="sign-up sign-up--facebook">
            <i class="fab fa-google sign-up-icon"></i>

            Đăng ký với Google
          </div>
          
          <div class="sign-up sign-up--facebook">
            <i class="fab fa-facebook sign-up-icon"></i>
            Đăng ký với Facebook
          </div>
          
          <div class="or-seperate">
            <span>Hoặc</span>
          </div>
          
          <div class="form-group">
            <label for="username" class="form-label">Tên đăng nhập</label>
            <input id="username" name="username" type="text" placeholder="VD: abcd" class="form-control">
            <span class="form-message"></span>
          </div>

          <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input id="email" name="email" type="text" placeholder="VD: 18120502@student.hcmus.edu.vn" class="form-control">
            <span class="form-message"></span>
          </div>
      
          <div class="form-group">
            <label for="password" class="form-label">Mật khẩu</label>
            <input id="password" name="password" type="password" placeholder="Nhập mật khẩu" class="form-control">
            <span class="form-message"></span>
          </div>
      
          <div class="form-group ">
            <label for="password_confirmation" class="form-label">Nhập lại mật khẩu</label>
            <input id="password_confirmation" name="password_confirmation" placeholder="Nhập lại mật khẩu" type="password" class="form-control">
            <span class="form-message"></span>
          </div>
          
           {{!-- <div class="form-group"></div>
            <label for="fullname" class="form-label">Tên đầy đủ</label>
            <input id="fullname" name="fullname" type="text" placeholder="VD: Tô Nguyễn Tấn Phát" class="form-control">
            <span class="form-message"></span>
          </div> --}}


          {{!-- <div class="form-group ">
            <label for="gender" class="form-label">Giới tính</label>
            <select id="gender" name="gender" placeholder="Nhập lại mật khẩu"  class="form-control">
                <option value="">--Chọn giới tính--</option>
                <option value="male">--Nam--</option>
                <option value="female">--Nữ--</option>
                <option value="other">--Khác--</option>
            </select>
            <span class="form-message"></span>
          </div> --}} 

          <div class="text-license">
            Vui lòng đọc <a href="#">điều khoản sử dụng</a> trước khi đăng ký
          </div>

          <button class="btn btn-primary form-submit">Đăng ký</button>
        </form>
      
      </div>
          
  <script src="/public/javascripts/validator.js"></script>

    
    <script>
        Validator({
            form:'#form-1',
            formGroup:'.form-group',
            errorSelector:'.form-message',
            rules:[
                Validator.isRequired('#email','Vui lòng nhập i meo'),
                Validator.isEmail('#email','Vui lòng nhập lại i meo'),
                Validator.minLength('#username',4),
                Validator.isRequired('#username'),
                Validator.isAccount('#username','Tên đăng nhập không được chứa các kí tự đặc bịt'),
                Validator.minLength('#password',6),
                {{!-- Validator.isPassword('#password','Mật khẩu phái bao gồm chữ in hoa, số và kí tự đặc biệt'), --}}
                Validator.isRequired('#password_confirmation'),
                {{!-- Validator.isRequired('#fullname','Vui lòng nhập họ tên đầy đủ'),
                Validator.isRequired('#role','Vui lòng chọn vai trò'),
                Validator.isRequired('#gender','Vui lòng chọn giới tính'), --}}
                Validator.isConfirmed('#password_confirmation',function() {
                  return document.querySelector('#form-1 #password').value;
                },'Mật khẩu không khớp')
            ],
            
        }
        )
    </script>
</body>
</html>
