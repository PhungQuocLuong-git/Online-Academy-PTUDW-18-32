<form method="POST">
    <div class="card">
        <div class="card-header">
            Subcategory
        </div>
        <div class="card-body">
            <div class="form-group">
                <input type="txt" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="_id"
                    value="{{list._id}}" autofocus readonly hidden>

            </div>
            
            <div class="form-group">
                <label for="exampleInputEmail1">CatName</label>
                <input type="txt" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    name="SubCatName" value="{{list.SubCatName}}">

            </div>


        </div>
        <div class="card-footer text-muted">
            <a class="btn btn-primary" href="/admin/categories" role="button">
                <i class="fa fa-backward" aria-hidden="true"></i>
                Back to List
            </a>
            <button type="submit" class="btn btn-outline-danger" formaction="/admin/subcategories/del">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                Delete
            </button>
            <button type="submit" class="btn btn-outline-success" formaction="/admin/subcategories/patch">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </div>
    </div>
</form>