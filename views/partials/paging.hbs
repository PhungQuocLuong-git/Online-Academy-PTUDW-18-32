{{#ifgreater pagination.pageCount 1}}
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        {{#paginate pagination type="first"}}
        <li class="pagination-item{{#if disabled}} disabled {{/if}}"value="{{n}}"><a class="pagination-item__link fas fa-angle-double-left" href="?p={{n}}" value="{{n}}"></a></li>
        {{/paginate}}
        {{#paginate pagination type="previous"}}
        <li class="pagination-item{{#if disabled}} disabled {{/if}}"value="{{n}}"><a class="pagination-item__link fas fa-angle-left" href="?p={{n}}" value="{{n}}"></a></li>
        {{/paginate}}
        {{#paginate pagination type="middle" limit="3"}}
        <li class="pagination-item {{#if active}} pagination-item--active{{/if}}"value="{{n}}"><a class="pagination-item__link" href="?p={{n}}" value="{{n}}">{{n}}</a></li>
        {{/paginate}}
        {{#paginate pagination type="next"}}
        <li class="pagination-item{{#if disabled}} disabled {{/if}}"value="{{n}}"><a class="pagination-item__link fas fa-angle-right" href="?p={{n}}" value="{{n}}"></a></li>
        {{/paginate}}
        {{#paginate pagination type="last"}}
        <li class="pagination-item{{#if disabled}} disabled {{/if}}"value="{{n}}"><a class="pagination-item__link fas fa-angle-double-right" href="?p={{n}}" value="{{n}}"></a></li>
        {{/paginate}}
    </ul>
</nav>
{{else}}
{{/ifgreater}}