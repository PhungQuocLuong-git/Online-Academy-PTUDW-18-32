<div class="container p-0 my-5" style="width: 65%;">
    <div class="text-center mb-5">
        <h3> {{title}} </h3>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-around p-0 b-5">
            <div class="row justify-content-around p-0 b-5">
                {{#each courses}}
                <div class="col-3 m-2 p-2" style="min-width: 170px;">
                    <div class="card h-100">
                        <img class="card-img-top" src="{{thumbnail}}" alt="Card image cap" style="height: 150px;">
                        <div class="card-body d-flex flex-column">
                            <p class="card-text text-primary font-weight-bold">{{subcatid.SubCatName}}</p>
                            <h6 class="card-title font-weight-bold">{{name}} </h6>
                            <p class="card-subtitle text-secondary teacher-text">{{course_author.name}}</p>
                            <div class="card-text d-flex">
                                <div class="rate" data-rate-value={{rating}}></div>

                            </div>

                        </div>
                        <div class="d-flex" style="bottom: 10px; margin: 15px;">
                            <a href="/courses/edit/{{slug}}"
                                class="btn-sm btn-primary align-self-start mt-auto">Edit</a>
                            <a href="/courses/{{slug}}"
                                class="btn-sm btn-primary align-self-start mt-auto ml-2">Detail</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>


        </div>
    </div>

</div>