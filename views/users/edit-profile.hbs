{{>menu-edit}}
<div class="container mt-5">
  <div class="row">
    <div class="col-sm-3 p-2">
      <div class="card text-left">
        <div class="text-center pt-5">
          <img width="100" height="100" src="/public/images/user1.png" alt="user" class="rounded-circle shadow">
        </div>
        <div class="card-body text-center">
          <h4 class="card-title">John Witch</h4>
        </div>
      </div>
    </div>
    <div class="col-sm-9 p-2">
      <form action="" method="POST">
        <div class="card">
          <div class="card-header align-items-center text-center">
            <h3>
              Public profile
            </h3>
            <p>Add information about yourself</p>
          </div>
          <div class="card-body">

            <div class="form-group">
              <label for="exampleInputEmail1">Name</label>
              <input type="txt" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="Name">

            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                name="Email">


            </div>


          </div>
          <div class="card-footer text-muted text-center">
            <button type="submit" class="btn btn-outline-success">
              <i class="fa fa-check" aria-hidden="true"></i>
              Save changes
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>